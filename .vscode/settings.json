{
    "dotnet.testWindow.useTestingPlatformProtocol": true,
    "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
    "dotnet.projects.enableAutomaticRestore": true,
    "dotnet.server.waitForDebugger": false,
    "omnisharp.enableEditorConfigSupport": true,
    "testing.automaticallyOpenPeekView": "never",
    "testing.openTesting": "openOnTestStart",
    "files.exclude": {
        "**/bin": true,
        "**/obj": true
    },
    "testing.automaticallyOpenTestResults": "openOnTestStart",
    "[csharp]": {
        "editor.defaultFormatter": "ms-dotnettools.csharp",
        "editor.codeActionsOnSave": [
            "source.organizeImports"
        ]
    },
    // Test Explorer Configuration
    "dotnet-test-explorer.testProjectPath": "**/*Tests.csproj",
    "dotnet-test-explorer.showCodeLens": true,
    "dotnet-test-explorer.codeLensFailed": "❌",
    "dotnet-test-explorer.codeLensPassed": "✅",
    "dotnet-test-explorer.codeLensSkipped": "⚠",
    "dotnet-test-explorer.enableTelemetry": false,
    "dotnet-test-explorer.treeMode": "full"
}